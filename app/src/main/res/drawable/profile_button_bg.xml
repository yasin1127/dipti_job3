<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#90CAF9"/> <!-- Color when pressed -->
            <corners android:radius="40dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#2196F3"/> <!-- Border color -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#BBDEFB"/> <!-- Default button color -->
            <corners android:radius="40dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#2196F3"/> <!-- Border color -->
        </shape>
    </item>
</selector>
